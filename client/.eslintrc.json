{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:vue/vue3-essential"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "vue"
    ],
    "rules": {
        "no-undef": "off",
        "vue/multi-word-component-names": "off",
        "vue/script-setup-uses-vars": "error"
    },
    "globals": {
        "defineProps": "readonly",
        "defineEmits": "readonly"
    }
}
